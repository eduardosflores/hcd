{% extends 'base.html.twig' %}

{% block body %}
    <h1>Persona</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ persona.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ persona.nombre }}</td>
        </tr>
        <tr>
            <th>Apellido</th>
            <td>{{ persona.apellido }}</td>
        </tr>
        <tr>
            <th>DNI</th>
            <td>{{ persona.dni }}</td>
        </tr>
        <tr>
            <th>Fecha nacimiento</th>
            <td>{% if persona.fechaNacimiento %}{{ persona.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Telefono</th>
            <td>
                {% for contacto in persona.contactoPersona %}
                    {{ contacto.telefono }}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Celular</th>
            <td>
                {% for contacto in persona.contactoPersona %}
                    {{ contacto.celular }}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Mail</th>
            <td>
                {% for contacto in persona.contactoPersona %}
                    {{ contacto.mail }}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Activo</th>
            <td>{% if persona.activo %}Yes{% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Fecha creación</th>
            <td>{% if persona.fechaCreacion %}{{ persona.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Fecha actualización</th>
            <td>{% if persona.fechaActualizacion %}{{ persona.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>


    <a class="btn btn-default" href="{{ path('persona_index') }}">Volver</a>

    <a class="btn btn-default" href="{{ path('persona_edit', { 'id': persona.id }) }}">Editar</a>


{% endblock %}
