{% extends '::base.html.twig' %}
{% block title %}
    Inicio
{% endblock title %}
{% block body %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Nueva votación</h3>
        </div>
        <div class="box-body">
            <div>
                <a href="{{ path('votacion_default_new', {'duracion': 10}) }}">Nueva votacion 10 segundos</a>
            </div>


            <div>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Fecha</th>
                        <th>Duración</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for votacion in votaciones %}
                            <tr>
                                <td>{{ votacion.id }}</td>
                                <td>{{ votacion.desde | date('d/m/Y H:i:s') }}</td>
                                <td>{{ votacion.duracion }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock body %}
