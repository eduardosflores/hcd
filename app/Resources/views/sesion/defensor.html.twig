<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sesión HCD</title>
    <link rel="stylesheet" href="{{ asset('build/global.css') }}">
    <link rel="stylesheet" href="{{ asset('build/common.css') }}">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/theme/css/custom.css') }}">
    <style>
        .btn-circle.btn-xl {
            width: 120px;
            height: 120px;
            padding: 10px 16px;
            font-size: 24px;
            line-height: 1.33;
            border-radius: 75px;
        }

        .container-body {
            margin-top: 15rem;
        }

        .btn-primary-hcd {
            background-color: #12a9d4;
        }

        .navbar-fixed-top {
            background-color: #17a867;
            padding: 1%;
        }
    </style>
    <script>
        window.baseUrl = '{{ path('app_homepage') }}';
    </script>
</head>
<body>

<div class="container">
    <div class="row">
        <div data-spy="scroll" data-target=".navbar" data-offset="50">

            <nav class="navbar navbar-fixed-top">
                <div class="row">
                    <div class="col-md-12 text-center">

                        <button type="button" class="btn btn-primary btn-primary-hcd btn-circle btn-xl"
                                id="verAe">
                            <i class="fa fa-file" aria-hidden="true"></i><br>
                            AE
                        </button>
                        <button type="button" class="btn btn-primary btn-primary-hcd btn-circle btn-xl"
                                id="consultarExpte">
                            <i class="fa fa-search" aria-hidden="true"></i><br>
                            <span style="font-size: 12px">Consultar Expte</span>
                        </button>
                        <button type="button" class="btn btn-primary btn-primary-hcd btn-circle btn-xl"
                                id="verOd">
                            <i class="fa fa-file-o" aria-hidden="true"></i><br>
                            OD
                        </button>
                        <button type="button" class="btn btn-primary btn-primary-hcd btn-circle btn-xl"
                                id="verCartaOrganica">
                            <i class="fa fa-file-o" aria-hidden="true"></i><br>
                            Carta Orgánica
                        </button>
                        <a class="btn btn-danger btn-lg pull-right" href="{{ path('sesion_logout') }}"> Salir
                            <span class="glyphicon glyphicon-log-out"></span>
                        </a>
                    </div>
                </div>
            </nav>

            <div class="container-body">
                <div class="row">
                    <div class="col-md-12">
                        <b>
                            {{ sesion.fecha | date('j F Y') }} - {{ sesion.titulo }}
                        </b>
                    </div>
                </div>
                <div class="row m-t-1">

                    <div class="col-md-12">
                        <div data-spy="scroll"
                             data-target="#navbar-example2" data-offset="0">
                            <div class="ae">
                                {{ sesion.asuntosEntrados | raw }}
                            </div>
                            <div class="consultar-expedientes" id="app">
                                <consultar-expediente></consultar-expediente>
                            </div>
                            <div class="mociones">
                                {% block body %}
                                {% endblock body %}
                            </div>
                            <div class="od">
                                {{ sesion.ordenDelDia | raw }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

        <div class="col-md-12">

        </div>
    </div>
    <div class="row">
        <hr>
        <div class="col-md-12">
            <h2>
                Defensor del Pueblo
            </h2>
        </div>
    </div>
</div>

</body>

<script src="{{ asset('build/app.js') }}"></script>
<script src="{{ asset('build/common-js.js') }}"></script>
{% block javascripts %}
{% endblock javascripts %}

<script>

    $(document).ready(function () {
        $('.ae').hide();
        $('.consultar-expedientes').hide();
        $('.od').hide()

        $('#lanzarVotacion').click(function () {
            window.location.href = $(this).attr('href');
        });
        $('#verAe').click(function () {
            $('.ae').show();
            $('.consultar-expedientes').hide();
            $('.od').hide();
            $('.mociones').hide();
        })
        $('#verOd').click(function () {
            $('.od').show();
            $('.consultar-expedientes').hide();
            $('.ae').hide();
            $('.mociones').hide();
        })
        $('#consultarExpte').click(function () {
            $('.consultar-expedientes').show();
            $('.od').hide();
            $('.ae').hide();
            $('.mociones').hide();
        })
    });
</script>
</html>