{% extends 'base.html.twig' %}

{% block title %}
    Sesión {{ sesion }} - {{ sesion }}
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Sesión {{ sesion }}</h3>
        </div>
        <div class="box-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Número</th>
                    <td>{{ sesion.numero }}</td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <td>{{ sesion.fecha | date('d/m/Y') }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('sesion_index') }}">Volver</a>
    <a class="btn btn-primary" href="{{ path('sesion_edit', { 'id': sesion.id }) }}">Editar</a>

    {{ form_start(delete_form, {'attr': {'class': 'pull-right'}}) }}
    <input class="btn btn-danger" type="submit" value="Eliminar">
    {{ form_end(delete_form) }}

{% endblock %}
