{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ textoDefinitivo.dictamen }}</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">

                </div>
                <div class="box-body">
                    <table>
                        <tbody>

                        <tr>
                            <th>Texto</th>
                            <td>{{ textoDefinitivo.texto | raw }}</td>
                        </tr>
                        <tr>
                            <th>Numero</th>
                            <td>{{ textoDefinitivo.numero }}</td>
                        </tr>
                        <tr>
                            <th>Rama</th>
                            <td>{{ textoDefinitivo.rama }}</td>
                        </tr>
                        <tr>
                            <th>Aprobado en Sesión</th>
                            <td>{{ textoDefinitivo.aprobadoEnSesion }}</td>
                        </tr>
                        <tr>
                            <th>Expedientes Adjuntos</th>
                            <td>
                                <ul>
                                    {% for expedienteAdjunto in textoDefinitivo.expedientesAdjuntos %}
                                        <li>{{ expedienteAdjunto.expediente }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <th>Anexos</th>
                            <td>
                                <ul>
                                    {% for anexo in textoDefinitivo.anexos %}
                                        <li>
                                            <a href="{{ vich_uploader_asset(anexo, 'anexoFile') }}"
                                               target="_blank">
                                                Ver
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <th>Fecha creación</th>
                            <td>{% if textoDefinitivo.fechaCreacion %}{{ textoDefinitivo.fechaCreacion|date('d/m/Y H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Fecha actualización</th>
                            <td>{% if textoDefinitivo.fechaActualizacion %}{{ textoDefinitivo.fechaActualizacion|date('d/m/Y H:i:s') }}{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <a class="btn btn-default" href="{{ path('dictamen_index') }}">Volver</a>

    {#    <a class="btn btn-default" href="{{ path('texto_definitivo_edit', { 'id': textoDefinitivo.id }) }}">Editar</a>#}



{% endblock %}
