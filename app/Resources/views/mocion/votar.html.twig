{% extends 'base.html.twig' %}

{% block title %}
    Moción {{ mocion }}
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Votar Moción {{ mocion }} - Expediente {{ mocion.expediente }}</h3>
        </div>

        <div class="box-body">
            <div class="row">
                {% if mocion.expediente %}
                    <div class="col-md-12">
                        <h3>Expediente {{ mocion.expediente }}</h3>
                        {{ mocion.fechaCreacion | date('d/m/Y') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="box">
        <div class="box-header with-border">
            <div class="box-title">Votación</div>
        </div>
        <div class="box-body">
            <div class="row">
                {% if mocion.puedeVotarse %}
                    <div class="col-md-12">
                        <div class="well">
                            <a href="{{ path('mocion_votar', {'id': mocion.id}) }}" class="btn btn-danger">Lanzar
                                votación</a>
                            <span class="text-muted">&nbsp;&nbsp;&nbsp; Se lanzará la votación por {{ segundos }}
                                segundos.</span>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
