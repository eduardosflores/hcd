{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alta Expediente</h1>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Expediente</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.tipoExpediente) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.expediente) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.anio) }}
                </div>
                <div class="col-md-1">
                    {{ form_row(form.letra) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.fecha) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.registroMunicipal) }}
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.iniciador) }}
                    {{ form_row(form.iniciadorParticular) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.extracto) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.textoDefinitivo) }}
                </div>
            </div>
            <div class="row expediente-externo">
                <div class="col-md-12">
                    {{ form_row(form.expedienteExternoFile) }}
                </div>
            </div>
            <div class="row expediente-interno">
                <div class="col-md-12">
                    {{ form_row(form.expedienteInternoFile) }}
                </div>
            </div>
            <div class="row expediente-interno">
                <div class="col-md-12">
                    {{ form_row(form.giroAdministrativos) }}
                </div>
            </div>
            <div class="row expediente-externo">
                <div class="col-md-12">
                    {{ form_row(form.giros) }}
                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    {{ form_widget(form) }}
                </div>
            </div>
            <input class="btn btn-primary" type="submit" value="Crear"/>
            {{ form_end(form) }}
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('expediente_index') }}">Volver</a>
{% endblock %}
{% block javascripts %}
    {#<script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>#}
    <script>

        $(document).on('change', '.area_cabecera', function () {
            $('.area_cabecera').not(this).prop('checked', false);
        });

        $(document).on('change', '.comision_cabecera', function () {
            $('.comision_cabecera').not(this).prop('checked', false);
        });

        $(document).ready(function () {

            $('.select2entity').each(function (index) {
                $(this).select2({
                    ajax: {
                        url: $(this).data('rpath'),
                        dataType: $(this).data('data-type'),
                        delay: 250,
                        data: function (params) {
                            return {
                                q: params.term,
                                page_limit: $(this).data('page-limit')
                            };
                        },
                        processResults: function (data) {
                            var myResults = [];
                            $.each(data, function (index, item) {
                                myResults.push({
                                    'id': item.id,
                                    'text': item.text
                                });
                            });
                            return {
                                results: myResults
                            };
                        }
                    },
                });
            });


            $('.expediente-externo').hide();
            $('.expediente-interno').hide();

            $('.tipo-expediente').change(function () {
                console.log($(".tipo-expediente option:selected").text());

                if ($(".tipo-expediente option:selected").text().toUpperCase() == 'INTERNO') {
                    $('.expediente-interno').show();
                    $('.expediente-externo').hide();
                } else {
                    $('.expediente-interno').hide();
                    $('.expediente-externo').show();
                }

            });
        });
    </script>
{% endblock javascripts %}
