{% extends 'base.html.twig' %}
{% block title %}
    Proyecto
{% endblock title %}
{% block body %}

    <h1>Alta Proyecto</h1>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Expediente</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.tipoProyecto) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.fecha) }}
                </div>
            </div>
            {% if iniciarComo | length > 1 %}
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.iniciarComo) }}
                </div>
            </div>
            {% endif %}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.iniciadores) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.texto) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ form_widget(form.guardar) }}
                    {{ form_widget(form.guardarYEnviar) }}
                </div>
            </div>


            <div class="hidden">
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.tipo-proyecto').change(function () {
                var tipoId = $(this).val();

                $.ajax({
                    type: 'get',
                    url: '{{ path("get_tipos_proyectos") }}',
                    data: {id: tipoId},
                    success: function (data) {
                        console.log('data', data);
                        CKEDITOR.instances.{{ form.texto.vars.id }}.setData(data);

                    }
                });
            });
        });
    </script>

{% endblock javascripts %}
