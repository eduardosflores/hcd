{% extends 'base.html.twig' %}
{% block title %}
    Seguimiento Expediente
{% endblock title %}

{% block contentHeader %}
    <section class="content-header">
        <h1>
            Expediente
            <small>Seguimientos</small>
        </h1>
    </section>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <ul class="timeline">
                {% if expediente.tipoExpediente and expediente.tipoExpediente.nombre | upper == 'EXTERNO' %}
                    <li class="time-label">
                    <span class="bg-red">
                            {{ expediente.fecha | date('d/m/Y') }}
                        </span>

                    {% for giroAdministrativo in expediente.giroAdministrativos %}
                        <li>
                            <i class="fa fa-refresh bg-blue"></i>

                            <div class="timeline-item">
                                <span class="time"><i
                                            class="fa fa-clock-o"></i> {{ giroAdministrativo.fechaGiro | date('d/m/Y') }}</span>
                                <h3 class="timeline-header">{{ giroAdministrativo.areaDestino }}</h3>
                                {% if is_granted('ROLE_MESA_ENTRADA') %}
                                <div class="timeline-footer">
                                    <a class="btn btn-default btn-xs" target="_blank"
                                       href="{{ path('expediente_imprimir_giro', {id: expediente.id, giroId: giroAdministrativo.id}) }}">
                                        <i class="fa fa-print"></i>
                                    </a>
                                </div>
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}

                    {% for giro in expediente.giros %}
                        <li>
                            <i class="fa fa-refresh bg-blue"></i>

                            <div class="timeline-item">
                            <span class="time">
                                <i class="fa fa-clock-o"></i> {{ giro.fechaGiro | date('d/m/Y') }}
                            </span>
                                <h3 class="timeline-header">{{ giro.comisionDestino }}</h3>

                                {% if is_granted('ROLE_MESA_ENTRADA') %}
                                <div class="timeline-footer">
                                    <a class="btn btn-default btn-xs" target="_blank"
                                       href="{{ path('expediente_imprimir_giro', {id: expediente.id, giroId: giro.id}) }}">
                                        <i class="fa fa-print"></i>
                                    </a>
                                </div>
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}

                    </li>
                {% endif %}

                {% if expediente.tipoExpediente and expediente.tipoExpediente.nombre | upper== 'INTERNO' %}
                    <li class="time-label">
                    <span class="bg-red">
                            {{ expediente.fecha | date('d/m/Y') }}
                        </span>
                    {% for giroAdministrativo in expediente.giroAdministrativos %}
                        <li>
                            <i class="fa fa-refresh bg-blue"></i>

                            <div class="timeline-item">
                                <span class="time"><i
                                            class="fa fa-clock-o"></i> {{ giroAdministrativo.fechaGiro | date('d/m/Y') }}</span>
                                <h3 class="timeline-header">{{ giroAdministrativo.areaDestino }}</h3>
                                <div class="timeline-footer">
                                    <a class="btn btn-default btn-xs" target="_blank"
                                       href="{{ path('expediente_imprimir_giro', {id: expediente.id, giroId: giroAdministrativo.id}) }}">
                                        <i class="fa fa-print"></i>
                                    </a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                    </li>
                {% endif %}
            </ul>

