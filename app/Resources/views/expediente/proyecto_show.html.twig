{% extends 'base.html.twig' %}
{% block title %}
    Proyecto
{% endblock title %}
{% block body %}
    <div class="row m-b-1">
        <div class="col-md-12">
            <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Proyecto</h3>
                </div>
                <div class="box-body">
                    {% if expediente.borrador == false and (is_granted('ROLE_CONCEJAL') or is_granted('ROLE_DEFENSOR')) %}
                        {% if expediente.expediente %}
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="progress active">
                                        <div class="progress-bar progress-bar-success progress-bar-striped"
                                             role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                                             style="width: 100%">
                                            <span>100% Completo</span>
                                        </div>
                                    </div>
                                    <a class="btn btn-default" target="_blank" href="{{ path('expediente_imprimir_proyecto', {'id': expediente.id}) }}"><i class="fa fa-print"></i></a>
                                </div>
                            </div>
                        {% else %}
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="progress active">
                                        <div class="progress-bar progress-bar-primary progress-bar-striped"
                                             role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"
                                             style="width: 50%">
                                            <span>50% Completo</span>
                                        </div>
                                    </div>
                                    <p class="text-light-blue">Para finalizar con el otro 50% del camino del expediente
                                        acerquese a Mesa de Entrada con el c칩digo que se muestra a la derecha</p>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                    <table>
                        <tbody>
                        <tr>
                            <th>Expediente</th>
                            <td>{{ expediente.expediente }}-{{ expediente.letra }}-{% if expediente.anio %}{{ expediente.anio }}{% else %}{{ expediente.periodoLegislativo.anio }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Texto definitivo</th>
                            <td>{{ expediente.textoDefinitivo }}</td>
                        </tr>
                        <tr>
                            <th>Extracto</th>
                            <td>{{ expediente.extracto }}</td>
                        </tr>
                        <tr>
                            <th>Texto</th>
                            <td>{{ expediente.texto | raw }}</td>
                        </tr>

                        <tr>
                            <th>Fecha</th>
                            <td>{% if expediente.fecha %}{{ expediente.fecha|date('d/m/Y') }}{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                {#<div class="box-footer">#}
                {#<a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>#}
                {#<a class="btn btn-primary" href="{{ path('expediente_edit', { 'id': expediente.id }) }}">Editar</a>#}
                {#<a class="btn btn-default" target="_blank"#}
                {#href="{{ path('expediente_imprimir_caratula', {id: expediente.id}) }}">#}
                {#<i class="fa fa-print"></i> Imprimir Car치tula#}
                {#</a>#}
                {#<a class="btn btn-default" target="_blank"#}
                {#href="{{ path('expediente_imprimir_proyecto', {id: expediente.id}) }}">#}
                {#<i class="fa fa-print"></i> Imprimir Proyecto#}
                {#</a>#}

                {#</div>#}
            </div>
        </div>
        {% if expediente.codigoReferencia and (is_granted('ROLE_CONCEJAL') or is_granted('ROLE_DEFENSOR')) %}
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">C칩digo</h3>
                    </div>
                    <div class="box-body">
                        <img class="img-responsive"
                             src="{{ qrcode_data_uri(expediente.codigoReferencia, { writer: 'png', logo_path: kernelRootDir ~ '/../web/apple-touch-icon.png' , logo_width: 50 }) }}"/>
                    </div>
                    <div class="box-footer">
                        <a class="btn btn-primary" download="{{ expediente.id }}.png"
                           href="{{ qrcode_data_uri(expediente.codigoReferencia, { writer: 'png' , logo_path: kernelRootDir ~ '/../web/apple-touch-icon.png' , logo_width: 50 }) }}"><i
                                    class="fa fa-download"></i> Descargar Codigo</a>
                        <a class="btn btn-primary btn-enviar-mail"><i class="fa fa-envelope"></i> Enviar al mail</a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>



{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.btn-enviar-mail').click(function () {

                modalAlert('<i class="fa fa-circle-o-notch fa-spin"></i> Enviando Mail');

                $.ajax({
                    type: 'post',
                    url: '{{ path('enviar_mail') }}',
                    data: {'expedienteId': {{ expediente.id }} },
                    success: function (data) {
                        $('#modal-alert .modal-body').html('<span class="text-green">Mail enviado correctamente</span>');

                    },
                    error: function (data) {
                        console.error('mail', data);
                        $('#modal-alert .modal-body').html('<span class="text-red">Ocurri칩 un error al enviar el mail</span>');
                    }
                });
            })
        });
    </script>
{% endblock javascripts %}