{% extends 'base.html.twig' %}
{% block title %}
    Expediente {{ expediente }} - Editar extracto
{% endblock %}


{% block body %}
    <h1>Editar Extracto</h1>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Expediente {{ expediente }}</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(edit_form.extractoDictamen) }}
                </div>
                <div class="col-md-6">
                    {% for log in expediente.logs %}
                        {% if log. %}
                            
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(edit_form.extractoTemario) }}
                </div>
            </div>

            <input class="btn btn-primary" type="submit" value="Guardar"/>
            <div class="hidden">
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
    <a class="btn btn-default" href="{{ path('expediente_index') }}">Volver</a>
{% endblock %}
