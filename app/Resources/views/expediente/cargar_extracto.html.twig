{% extends 'base.html.twig' %}
{% block title %}
    Cargar Extracto
{% endblock title %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-default" href="{{ path('expedientes_legislativos_index') }}"> Volver</a>
        </div>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Expediente</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            {{ form_widget(form.extracto) }}
            <div class="row m-t-1">
                <div class="col-md-12">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Guardar</button>
                </div>
            </div>
            <div class="hidden">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-default" href="{{ path('expedientes_legislativos_index') }}"> Volver</a>
        </div>
    </div>

{% endblock body %}