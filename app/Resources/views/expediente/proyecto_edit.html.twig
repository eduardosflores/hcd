{% extends 'base.html.twig' %}
{% block title %}
    Proyectos
{% endblock title %}
{% block body %}


    <h1>Editar Expediente</h1>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Expediente</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form) }}
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(edit_form.tipoProyecto) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(edit_form.fecha) }}
                </div>
            </div>

            {% if iniciarComo | length > 1 %}
                <div class="row">
                    <div class="col-md-3">
                        {{ form_row(edit_form.iniciarComo) }}
                    </div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(edit_form.iniciadores) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {% if expediente.borrador == false %}
                        {{ form_row(edit_form.texto) }}
                    {% else %}
                        {{ expediente.texto | raw }}
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ form_widget(edit_form.guardar) }}

                    {% if expediente.borrador == false %}
                        {{ form_widget(edit_form.guardarYEnviar) }}
                    {% endif %}

                    <a class="btn btn-default" target="_blank"
                       href="{{ path('expediente_imprimir_caratula', {id: expediente.id}) }}">
                        <i class="fa fa-print"></i> Imprimir
                    </a>
                </div>
            </div>

            <div class="hidden">
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>
{% endblock %}
{% block javascripts %}
{% endblock javascripts %}
