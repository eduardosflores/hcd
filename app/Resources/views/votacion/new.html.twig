{% extends 'base.html.twig' %}

{% block title %}
    Moción {{ mocion }} - Votación
{% endblock title %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Moción {{ mocion }} - Lanzar votación</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-danger" type="submit">Lanzar votación</button>
            {{ form_end(form) }}
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('votacion_index', {'mocion': mocion.id}) }}">Volver</a>

{% endblock %}
