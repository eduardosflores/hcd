{% extends 'base.html.twig' %}

{% block body %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Moción {{ votacion.mocion.numero }} - Votación #{{ votacion.id }}</h3>
        </div>
        <div class="box-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ votacion.id }}</td>
                </tr>
                <tr>
                    <th>Desde</th>
                    <td>{% if votacion.desde %}{{ votacion.desde|date('d/m/Y H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Hasta</th>
                    <td>{% if votacion.hasta %}{{ votacion.hasta|date('d/m/Y H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Duración</th>
                    <td>{{ votacion.duracion }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>


    <a class="btn btn-default" href="{{ path('votacion_index', {'mocion': votacion.mocion.id}) }}">Volver</a>

    <a class="btn btn-default" href="{{ path('votacion_edit', { 'mocion': votacion.mocion.id, 'id': votacion.id }) }}">Editar</a>

    <div class="pull-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Eliminar">
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
